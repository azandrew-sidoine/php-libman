{
    "name": "drewlabs/libman",
    "description": "Libman package is a small PHP utility library used in installing, creating business specific class instance using configuration based approach",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Libman\\": "src/"
        },
        "files": [
            "./src/proxy.php"
        ]
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0",
        "symfony/process": ">=3.4|^4.0|^5.0|^6.1",
        "composer-runtime-api": "^2.0",
        "drewlabs/crypt": "^0.2.5",
        "drewlabs/envoyer-contracts": "^0.2.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Drewlabs\\Libman\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-yaml": "YAML extension is required to use the YAML definiton loader"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
